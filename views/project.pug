extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1 #{project.project_name}

        p.lead.text-light #{project.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each technology in project.technologies
            li #{technology}

        a.button.expanded(href=`${project.live_link}` target="blank") Live Demo
        a.button.expanded(href=`${project.github_link}` target="blank") GitHub Repo
    
    each image in project.image_urls.screenshots
      img.image(src=`${image}`)